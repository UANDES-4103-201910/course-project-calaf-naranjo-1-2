<p id="notice"><%= notice %></p>

<h1>Super Admins</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Password</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Username</th>
      <th>Bio</th>
      <th>Post</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @super_admins.each do |super_admin| %>
      <tr>
        <td><%= super_admin.email %></td>
        <td><%= super_admin.password %></td>
        <td><%= super_admin.latitude %></td>
        <td><%= super_admin.longitude %></td>
        <td><%= super_admin.username %></td>
        <td><%= super_admin.bio %></td>
        <td><%= super_admin.post %></td>
        <td><%= super_admin.location %></td>
        <td><%= link_to 'Show', super_admin %></td>
        <td><%= link_to 'Edit', edit_super_admin_path(super_admin) %></td>
        <td><%= link_to 'Destroy', super_admin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

